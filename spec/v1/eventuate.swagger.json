            "required": true,
            "schema": {
              "$ref": "#/definitions/GatewaySpecification"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "additionalProperties": false,
              "properties": {
                "gatewayId": {
                  "type": "string"
                }
              },
              "required": [
                "gatewayId"
              ],
              "type": "object"
            }
          },
          "401": {
            "description": "token verification error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "409": {
            "description": "gateway already exists",
