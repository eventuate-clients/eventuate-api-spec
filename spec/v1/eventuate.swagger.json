{
  "basePath": "/",
  "definitions": {
    "MapItem": {
      "properties": {
        "entityType": {
          "type": "string"
        },
        "eventTypes": {
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "entityType",
        "eventTypes"
      ],
      "type": "object"
    },

    "ErrorResponse": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "code",
        "message"
      ],
      "type": "object"
    },

    "GatewaySpecification": {
      "additionalProperties": false,
      "properties": {
        "subscriberId": {
          "type": "string"
        },
        "entitiesAndEventTypes": {
          "additionalProperties": {
            "$ref": "#/definitions/MapItem"
          },
          "type": "object"
        },
        "gatewayDestination": {
          "additionalProperties": false,
          "properties": {
            "gatewayType": {
              "type": "string"
